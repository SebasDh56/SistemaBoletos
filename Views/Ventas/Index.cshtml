@model IEnumerable<SistemaBoletos.Models.Venta>

@{
    ViewData["Title"] = "Historial de Ventas";
}

<div class="card mb-4 shadow">
    <div class="card-header d-flex justify-content-between align-items-center py-3">
        <h6 class="font-weight-bold text-primary m-0">@ViewData["Title"]</h6>
        <div>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Nueva Venta
            </a>
            <a asp-action="Resumen" class="btn btn-info btn-sm ml-2">
                <i class="bi bi-graph-up"></i> Ver Resumen
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table-bordered table" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Persona</th>
                        <th>Cooperativa</th>
                        <th>Cantidad</th>
                        <th>Total</th>
                        <th>Comisión</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Fecha.ToString("g")</td>
                            <td>@item.Persona.CedulaNombre</td>
                            <td>@item.Cooperativa.Nombre</td>
                            <td>@item.Cantidad</td>
                            <td>@item.Total.ToString("C")</td>
                            <td>@(item.AplicaComision ? "Sí" : "No")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>